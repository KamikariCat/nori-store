{
    "name": "nori-store",
    "version": "2.1.3",
    "description": "Store for JS and TS applications",
    "main": "./build/index.js",
    "types": "./build/types/index.d.ts",
    "exports": {
        "import": "./build/index.js",
        "require": "./build/index.js"
    },
    "files": [
        "build"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/KamikariCat/nori-store"
    },
    "scripts": {
        "build": "cross-env NODE_ENV=production webpack",
        "build:dev": "cross-env NODE_ENV=production webpack && npm pack",
        "test": "jest",
        "lint": "eslint",
        "format": "prettier --write \"(src|tests)/**/*.ts\"",
        "patch": "npm version patch",
        "minor": "npm version minor",
        "major": "npm version major"
    },
    "keywords": [
        "nori-store",
        "store",
        "react",
        "typescript",
        "state",
        "appstore"
    ],
    "author": "NORI",
    "license": "ISC",
    "devDependencies": {
        "@eslint/compat": "^1.2.4",
        "@types/jest": "^29.5.14",
        "@typescript-eslint/eslint-plugin": "^8.18.0",
        "@typescript-eslint/parser": "^8.18.0",
        "@webpack-cli/generators": "^3.0.7",
        "cross-env": "^7.0.3",
        "eslint": "^9.17.0",
        "eslint-plugin-import": "^2.31.0",
        "globals": "^15.13.0",
        "jest": "^29.7.0",
        "prettier": "^3.4.2",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "~5.6.2",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4"
    }
}
